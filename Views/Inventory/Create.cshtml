@model PetalOrSomething.Models.FlowerInventory

@{
    ViewData["Title"] = "Create Flower Inventory";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header text-center bg-light">
            <h5 class="fw-bold mb-0">Add New Flower Inventory</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Flower Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter flower name" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Model3DFile">3D Model File</label>
                    <input type="file" class="form-control" id="Model3DFile" name="Model3DFile"
                        accept=".glb, .gltf, .obj, .fbx, .stl" />
                    <div class="form-text">Upload the 3D model file (GLB, GLTF, OBJ, FBX, STL).</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Model2DImage">2D Image</label>
                    <input type="file" class="form-control" id="Model2DImage" name="Model2DImage" accept="image/*" />
                    <div class="form-text">Upload a 2D image (JPG, PNG, etc.).</div>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price"
                        required />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
