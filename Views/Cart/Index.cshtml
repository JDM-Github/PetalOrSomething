<div class="container">
    <h2>Your Cart</h2>
    @if (Model.Items == null || !Model.Items.Any())
    {
        <p>Your cart is empty!</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <img src="@item.Image" alt="@item.ProductName" style="width: 50px;" />
                        </td>
                        <td>@item.ProductName</td>
                        <td>$@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>$@item.TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
