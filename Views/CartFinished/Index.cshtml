@model IEnumerable<PetalOrSomething.Models.CartFinished>

@{
    ViewData["Title"] = "Cart Summary";
}

<div class="container">
    <h2 class="text-center text-primary">Your Cart</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Product ID</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Quantity</td>
                    <td>â‚±@(item.Quantity * 100)</td>
                    <td>
                        <form method="post" action="@Url.Action("RemoveItem", "Home")">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success">Complete</button>
                        </form>
                        <form method="post" action="@Url.Action("RemoveItem", "Home")">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a href="@Url.Action("Checkout", "Home")" class="btn btn-success btn-lg">Proceed to Checkout</a>
    </div>
</div>
