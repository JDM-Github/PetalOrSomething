@{
    ViewData["Title"] = "Order Here";
}
<style>
    .container {
        background-color: #fafafa;
        background-size: cover;
        background-position: center;
        text-align: center;
        border-radius: 10px;
    }
    .btn-pink {
        background-color: #F6C4C3;
        color: white;
        border: none;
        font-weight: bold;
        box-shadow: 0 5px 10px #00000077;
    }

        .btn-pink:hover {
            color: white;
            background-color: #d6a4a3;
        }

    .text-pink {
        color: white;
    }

    .image-container {
        position: relative;
        width: 100%;
        height: 250px; /* Set consistent height */
        overflow: hidden; /* Hide overflow for rounded top */
        border-top-left-radius: 50%; /* Large arc */
        border-top-right-radius: 50%; /* Large arc */
       

    }   

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures images fill the container without distortion */
            
        }

       .product-card {
        border-top-left-radius: 50%; /* Large arc */
        border-top-right-radius: 50%; /* Large arc */
        box-shadow: 0 1px 10px #00000077 !important;
       }

    /* Category Container Styling */
    .category-container {
        max-height: 150px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #fff; /* White background for container */
        box-shadow: 0 1px 10px #00000077 !important;
    }

    /* Button Styling */
    .category-btn {
        background-color: #fff; /* Default white background */
        color: #5F4B8B; /* Pink text color */
        border-radius: 30px; /* Rounded pill shape */
        padding: 5px 8px;
        font-weight: bold;
        transition: all 0.1s ease; /* Smooth hover/active transition */
    }

        /* Hover and Active State */
        .category-btn:hover,
        .category-btn:focus,
        .category-btn.active {
            background-color: #F6C4C3;
            outline: black !important;
            box-shadow: none !important;
            color: white;
        }


    .rating i { 
        color: yellow;
        font-size: 18px;
        margin-right: 2px;
    }

    /* Container for pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    /* Styling for the pagination */
    .pagination {
        list-style: none;
        display: flex;
        gap: 10px;
        padding: 0;
        margin: 0;
    }

    /* Base styles for each pagination link */
    .page-link {
        padding: 8px 15px;
        text-decoration: none;
        background-color: #fff;
        color: #5F4B8B;
        font-weight: bold;
        border-radius: 30px;
        transition: all 0.2s ease-in-out;
        border: 2px solid #5F4B8B;
    }

        /* Hover and active states */
        .page-link:hover,
        .page-link:focus {
            background-color: #5F4B8B;
             color: white;
            outline: none;
            border-color: #5F4B8B;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Active page style */
        .page-link.active {
            background-color: #F6C4C3;
            color: white;
            border-color: #F6C4C3;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

    /* Disable previous/next buttons */
    .pagination li.disabled .page-link {
        color: #ccc;
        pointer-events: none;
        border-color: #ccc;
    }

        .pagination li.disabled .page-link:hover {
            background-color: #fff;
            color: #ccc;
            border-color: #ccc;
        }



</style>
