@model PetalOrSomething.Models.Account

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex flex-column flex-md-row vh-70">
    <!-- Left Side: Image and Description -->
    <div class="d-none d-md-flex flex-column justify-content-center align-items-center bg-pink text-white p-4"
        style="width: 50%;
background-image: url('https://img.freepik.com/premium-photo/vintage-cash-register-amidst-freshly-cut-roses-flower-shop_1282444-98546.jpg'); background-size: cover; background-position: center;">
        <h1 class="display-4 fw-bold text-white" style="text-shadow: 0 5px 25px #00000088;">Welcome Back!</h1>
        <p class="lead text-center" style="text-shadow: 0 5px 25px #00000088;">Log in to access your account and
            continue your journey with Petal and Planes.</p>
    </div>

    <!-- Right Side: Login Form -->
    <div class="d-flex justify-content-center align-items-center bg-white p-4" style="width: 50%;">
        <div class="card" style="max-width: 500px; width: 100%;">
            <div class="card-body">
                <h2 class="text-center text-pink mb-4">Login</h2>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mt-2">
                        <label asp-for="Email" class="form-label fw-bold text-muted">Email</label>
                        <input asp-for="Email" class="form-control" type="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password with Toggle -->
                    <div class="form-group mt-2 position-relative">
                        <label asp-for="Password" class="form-label fw-bold text-muted">Password</label>
                        <div class="d-flex w-100 position-relative">
                            <input asp-for="Password" class="form-control pe-5" id="passwordInput" type="password"
                                required />
                            <button type="button" class="btn btn-light position-absolute end-0 mt-1"
                                onclick="togglePassword()" style="border: none;">
                                <i class="fa fa-eye" id="togglePasswordIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Login" class="btn btn-pink w-100 rounded-pill" />
                    </div>

                    <div class="text-center mt-3">
                        <a href="@Url.Action("Register", "Accounts")" class="text-pink">Don't have an account? Register
                            here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('togglePasswordIcon');
            const isPassword = passwordInput.type === 'password';
            passwordInput.type = isPassword ? 'text' : 'password';
            toggleIcon.classList.toggle('fa-eye');
            toggleIcon.classList.toggle('fa-eye-slash');
        }
    </script>
}
